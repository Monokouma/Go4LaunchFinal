<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/baby_powder"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/coworkers_items_ImageView_user_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        tools:srcCompat="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/coworkers_items_TextView_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/coworkers_items_ImageView_user_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/coworkers_items_ImageView_user_image"
        app:layout_constraintTop_toTopOf="@id/coworkers_items_ImageView_user_image"
        tools:text="Snoop Dogg is not eating right now"
        />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/coworkers_items_Divider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:dividerColor="@color/dark_purple"
        app:dividerInsetEnd="16dp"
        app:dividerInsetStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coworkers_items_ImageView_user_image"
        />


</androidx.constraintlayout.widget.ConstraintLayout>